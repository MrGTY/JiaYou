<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
        
   <context:component-scan base-package="cn.zhaojisys.controller"/>
   <mvc:annotation-driven>
   		<mvc:message-converters>
   		<!-- 解决乱码问题(StringHttpMessageConverter將请求信息转化成字符串，但是默认为ISO-8859-1) -->
   			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
   				<property name="supportedMediaTypes">
   					<list>
   						<value>application/json;charset=UTF-8</value>
   					</list>
   				</property>
   			</bean>
   			<bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
   				<!-- 转换后支持的格式 -->
   				<property name="supportedMediaTypes">
   					<list>
   						<value>text/html;charset=UTF-8</value>
   						<value>application/json</value>
   					</list>
   				</property>
   				<!-- 日期输出以yyyy-MM-dd HH:mm:ss展示 (实体类属性装备@JsonField)-->
   				<property name="features">
   					<list>
   						<value>WriteDateUseDateFormat</value>
   					</list>
   				</property>
   			</bean>
   		</mvc:message-converters>
   </mvc:annotation-driven>
   
   <mvc:resources location="/statics/" mapping="/statics/**"></mvc:resources>
   <mvc:resources location="/WEB-INF/jsp/app" mapping="/WEB-INF/jsp/app/**"></mvc:resources>
    
    <!-- 配置多视图解析器 -->
    <bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
        <property name="favorParameter" value="true"/> 
        <property name="defaultContentType" value="text/html" /> 
        <property name="mediaTypes">
            <map>
            	<entry key="html" value="text/html; charset=UTF-8"/>
                <entry key="json" value="application/json; charset=UTF-8"/>
                <entry key="xml" value="application/xml; charset=UTF-8"/>
            </map>
        </property>
        <property name="viewResolvers">
            <list>
                <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
				   <property name="prefix" value="/WEB-INF/jsp/"/>
				   <property name="suffix" value=".jsp"/>
			   </bean>
            </list>
        </property>
    </bean>
 
	<!-- 配置interceptors -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<mvc:exclude-mapping path="/loginu"/>
			<mvc:exclude-mapping path="/login"/>
			<mvc:exclude-mapping path="/statics/**"/>
			<mvc:exclude-mapping path="/**/loginyes"/>
			<mvc:exclude-mapping path="/**/loginphone"/>
			<mvc:exclude-mapping path="/**/yzm"/>
			<mvc:exclude-mapping path="/**/xieyi"/>
			<mvc:exclude-mapping path="/**/Zcyzm"/>
			<mvc:exclude-mapping path="/**/addVipuserinfo"/>
			<mvc:exclude-mapping path="/**/app/**"/>
			<mvc:exclude-mapping path="/**/loginyes"/>
			<mvc:exclude-mapping path="/**/findMeg"/>
			<mvc:exclude-mapping path="/**/loginphone"/>
			<mvc:exclude-mapping path="/**/geren"/>
			<mvc:exclude-mapping path="/**/gerencheliang"/>
			<mvc:exclude-mapping path="/**/yzm"/>
			<mvc:exclude-mapping path="/**/brand"/>
			<mvc:exclude-mapping path="/**/buyTyre"/>
			<mvc:exclude-mapping path="/**/shopList"/>
			<mvc:exclude-mapping path="/**/deloneshop"/>
			<mvc:exclude-mapping path="/**/carList"/>
			<mvc:exclude-mapping path="/**/xiaofeijilu"/>
			<mvc:exclude-mapping path="/**/shopAllList"/>
			<mvc:exclude-mapping path="/**/isExistFriends"/>
			<mvc:exclude-mapping path="/**/buildMyFriend"/>
			<mvc:exclude-mapping path="/**/findMyFriend"/>
			<mvc:exclude-mapping path="/**/vipInfo"/>
			<mvc:exclude-mapping path="/**/addoil"/>
			<mvc:exclude-mapping path="/**/oilInfo"/>
			<mvc:exclude-mapping path="/**/breakMyFriend"/>
			<mvc:exclude-mapping path="/**/record"/>
			<mvc:exclude-mapping path="/**/giveOil"/>
			<mvc:exclude-mapping path="/**/xieyi"/>
			<mvc:exclude-mapping path="/**/HomePage"/>
			<mvc:exclude-mapping path="/**/Information"/>
			<mvc:exclude-mapping path="/**/uNamepwd"/>
			<mvc:exclude-mapping path="/**/gName"/>
			<mvc:exclude-mapping path="/**/addVipuserinfo"/>
			<mvc:exclude-mapping path="/**/app/**"/> 
			<bean class="cn.zhaojisys.interceptor.SysInterceptor"/>
		</mvc:interceptor> 
	</mvc:interceptors>
	
	<!-- 配置文件上传  MultipartResolver-->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="500000000"/>
		<property name="defaultEncoding" value="UTF-8"/>
	</bean>
</beans>   